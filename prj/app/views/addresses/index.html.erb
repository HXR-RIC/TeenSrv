
<h1>Addresses for</h1>
<p>
  <strong><%= @user.username %></strong>
</p>

<%= link_to 'New address', new_user_address_path(@user) %>
<%= link_to 'Back', user_path(@user) %>
<table>
  <tr>
    <th colspan="1"></th>
  </tr>
 
  <% @addresses.each do |address| %>
    <tr>
      <% if address.address_type == 1 %>
        <td><h2>Primary Address</h2></td>
      <% else %>
        <td><h2>Secondary Address</h2></td>
      <% end %>
      <td><%= address.street_no %></td>      
      <td><%= address.street %></td>
      <td>  Apt: <%= address.apt_no %></td>
      <td><%= address.postalcode %></td>
      <td><%= address.city %></td>
      <td><%= address.province %></td>
      <td><%= link_to 'Show', user_address_path(@user, address) %></td>
      <td><%= link_to 'Edit', edit_user_address_path(@user, address) %></td>
      <td><%= link_to 'Destroy', user_address_path(@user, address), 
            method: :delete, 
            data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>